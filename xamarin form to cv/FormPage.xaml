<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CurriculumVitaeApp.FormPage"
             Title="Formulario">
    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            <Entry Placeholder="Nombre" x:Name="NameEntry" />
            <Entry Placeholder="Profesión" x:Name="ProfessionEntry" />
            <Editor Placeholder="Descripción breve sobre ti" x:Name="DescriptionEditor" />
            <Entry Placeholder="Experiencia laboral (separar con comas)" x:Name="ExperienceEntry" />
            <Entry Placeholder="Educación (separar con comas)" x:Name="EducationEntry" />

            <Button Text="Generar CV" Clicked="OnGenerateCvClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
